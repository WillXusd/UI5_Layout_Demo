<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="UI5_Layout_Demo.controller.SimpleForm"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" >
		<Page title="{i18n>title}">
				<content>
		<VBox class="sapUiSmallMargin">
		<f:SimpleForm 
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1" >
			<f:content>
				<Label text="Name" />
				<Text id="nameText" text="Will" />
				<Label text="Street/No." />
				<Text text="Main St 1618" />
				<Label text="ZIP Code/City" />
				<Text text="31415 Maintown" />
				<Label text="Country" />
				<Text id="countryText" text="China" />
			</f:content>
		</f:SimpleForm>
	</VBox>
				</content>
			</Page>

</mvc:View>